<%= page_title "Startkladde Web-Zugriff: Flugdatenbank" %>

<% form_tag do %>
	<table>
		<tr>
			<td>Datum:</td>
			<td><%= radio_button_tag('date_spec', 'today', true) %>Heute</td>
		</tr>
		<tr>
			<td></td>
			<td><%= radio_button_tag('date_spec', 'yesterday', false) %>Gestern</td>
		</tr>
		<tr>
			<td></td>
			<td><%= radio_button_tag('date_spec', 'single', false) %>Anderes Datum: </td>
			<td>Jahr:  <%= text_field_tag 'year' , Date.today.year , :size => 4 %></td>
			<td>Monat: <%= text_field_tag 'month', Date.today.month, :size => 2 %></td>
			<td>Tag:   <%= text_field_tag 'day'  , Date.today.day  , :size => 2 %></td>
		</tr>
		<%# TODO format plugin %>
		<%# TODO separate towflights %>
		<tr>
			<td>Format:</td>
			<td><%= select_tag('format', options_for_select({"HTML"=>'html', "CSV"=>'csv'}, @format)) %></td>
		</tr>
		<tr>
			<td colspan="5">
			  <%= submit_tag 'Abrufen' %>
			</td>
		</tr>
	</table>
<% end %>

