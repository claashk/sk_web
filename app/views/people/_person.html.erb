<% user=person.user %>

<table class="object">
	<tr>
		<th>ID:</th>
		<td><%=h person.id %></td>
	</tr>

	<tr>
		<th>Nachname:</th>
		<td><%=h person.last_name %></td>
	</tr>

	<tr>
		<th>Vorname:</th>
		<td><%=h person.first_name %></td>
	</tr>

	<tr>
		<th>Verein:</th>
		<td><%=h person.club %></td>
	</tr>

	<tr>
		<th>Benutzer:</th>
		<td>
			<% if user %>
				<%= link_to "#{user.username}", user %>
			<% else %>
				-
			<% end %>
		</td>
	</tr>

	<tr>
		<th>Vereins-ID:</th>
		<td><%=h person.club_id %></td>
	</tr>

	<tr>
		<th>Bemerkung:</th>
		<td><%=h person.comments %></td>
	</tr>
</table>

