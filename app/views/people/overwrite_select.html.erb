<%= page_title "Person #{h @wrong_person.full_name} 체berschreiben" %>

<h2>Falsche Person</h2>

<p>Die folgende (falsche) Person wird 체berschrieben:</p>
<%= render :partial => 'person', :locals => { :person=>@wrong_person } %>


<h2>Korrekte Person</h2>

<p>Bitte die korrekte Person ausw채hlen:</p>

<% form_tag do %>
	<%= hidden_field_tag 'id', @wrong_person.id %>
	
	<% table_for(@people) { |table| %>
		<% table.header_row { |header| %>
			<%= header.text nil          %>
			<%= header.text "ID"         %>
			<%= header.text "Nachname"   %>
			<%= header.text "Vorname"    %>
			<%= header.text "Verein"     %>
			<%= header.text "Vereins-ID" %>
			<%= header.text "Bemerkung"  %>
		<% } %>

		<% table.body { |body, person| %>
			<%= body.cell radio_button_tag('correct_person_id', person.id, false) %>
			<%= body.cell link_to(person.id, person)                      %>
			<%= body.cell link_to(person.last_name, person)               %>
			<%= body.cell link_to(person.first_name, person)              %>
			<%= body.text person.verein                                   %>
			<%= body.text person.vereins_id                               %>
			<%= body.text person.bemerkung                                %>
		<% } %>
	<% } %>

	<p><%= submit_tag 'Ausw채hlen' %></p>
<% end %>

<p>
	<%= link_to 'Personenliste', people_path %>
</p>

