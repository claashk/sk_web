<%= page_title "Startliste" %>

<% form_tag do %>
	<table class="form">
		<%= render :partial=>'partials/date_fields' %>
		<tr>
			<td>Format:</td>
			<td><%= select_tag('format', options_for_select({"PDF"=>'pdf', "HTML"=>'html', "CSV"=>'csv', "LaTeX"=>'tex'}, @format)) %></td>
		</tr>
		<tr>
			<td colspan="5">
			  <%= submit_tag 'Abrufen' %>
			</td>
		</tr>
	</table>
<% end %>

