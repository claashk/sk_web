<% page_title "Person #{h @person.full_name} editieren" do %>

	<% form_for(@person) do |f| %>
		<%= f.error_messages %>

		<table class="form">
			<tr>
				<th><%= f.label :last_name, "Nachname" %>:</th>
				<td><%= f.text_field :last_name %></td>
			</tr>
			<tr>
				<th><%= f.label :first_name, "Vorname" %>:</th>
				<td><%= f.text_field :first_name %></td>
			</tr>
			<tr>
				<th><%= f.label :club, "Verein" %>:</th>
				<td><%= f.text_field :club %></td>
			</tr>
			<tr>
				<th><%= f.label :club_id, "Vereins-ID" %>:</th>
				<td><%= f.text_field :club_id %></td>
			</tr>
			<tr>
				<th><%= f.label :comments, "Bemerkungen" %>:</th>
				<td><%= f.text_field :comments %></td>
			</tr>
		</table>

		<p><%= f.submit 'Speichern' %></p>
	<% end %>

	<p>
	<%= link_to 'Anzeigen', @person %> |
	<%= link_to 'Personenliste', people_path %>
	</p>

<% end %>

