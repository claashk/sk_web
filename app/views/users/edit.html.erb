<%= page_title "Benutzer #{h @user.username} editieren" %>

<% form_for(@user) do |f| %>
	<% person=@user.associated_person %>
	<%= f.error_messages %>

	<%# TODO default button with <div style="display:none;"> %>

	<table>
		<tr>
			<th>Benutzername:</th>
			<td><%= h @user.username %></td>
		</tr>
		<tr>
			<th><%= f.label :club, "Verein:" %></th>
			<td><%= f.text_field :club %></td>
		</tr>
		<tr>
			<th><%= f.label :person, "Person:" %></th>
			<td>
				<%= h (person)?"#{person.formal_name} (#{person.id})":"-" %>
				<%= f.hidden_field 'person', { :value => (person)?(person.id):0 } %>
				<%= submit_tag (person)?"Ändern":"Auswählen", :name => 'select_person' %>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<%= f.check_box :perm_club_admin %>
				<%= f.label :perm_club_admin, "Vereinsadministrator" %>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<%= f.check_box :perm_read_flight_db %>
				<%= f.label :perm_read_flight_db, "Flugdatenbank lesen" %>
			</td>
		</tr>
	</table>

	<p>
		<%= f.submit 'Speichern' %>
	</p>
<% end %>

<p>
	<%= link_to 'Anzeigen', @user %> |
	<%= link_to 'Passwort ändern', :action => 'change_password', :id => @user.username %> |
	<%= link_to 'Benutzerliste', users_path %>
</p>

