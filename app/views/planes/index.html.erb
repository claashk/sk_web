<h1>Listing planes</h1>

<table>
  <tr>
    <th>Kennzeichen</th>
    <th>Verein</th>
    <th>Typ</th>
    <th>Sitze</th>
    <th>Gattung</th>
    <th>Wettbewerbskennzeichen</th>
    <th>Bemerkung</th>
  </tr>

<% @planes.each do |plane| %>
  <tr>
    <td><%=h plane.kennzeichen %></td>
    <td><%=h plane.verein %></td>
    <td><%=h plane.typ %></td>
    <td><%=h plane.sitze %></td>
    <td><%=h plane.gattung %></td>
    <td><%=h plane.wettbewerbskennzeichen %></td>
    <td><%=h plane.bemerkung %></td>
    <td><%= link_to 'Show', plane %></td>
    <td><%= link_to 'Edit', edit_plane_path(plane) %></td>
    <td><%= link_to 'Destroy', plane, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

